{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "checkJs": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "$tokens": ["src/lib/tokens/index.js"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.svelte"]
}
