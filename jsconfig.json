{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "checkJs": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "types": ["@sveltejs/kit"]
  },
  "include": ["src/**/*.js", "src/**/*.svelte", "src/**/*.d.ts", ".svelte-kit/ambient.d.ts", ".svelte-kit/non-ambient.d.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.ts", "**/*.tsx"]
}
